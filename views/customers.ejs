<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bankist | Customers</title>
    <link rel="stylesheet" href="/css/customers.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:400,500,600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <nav class="nav">
        <img
          src="/images/logo.png"
          alt="Bankist logo"
          class="nav__logo"
          id="logo"
          designer="Vedant"
          data-version-number="3.0"
        />
        <ul class="nav__links">
          <li class="nav__item">
            <a class="nav__link nav__link--btn" href="/">Home</a>
          </li>
          <li class="nav__item">
            <a class="nav__link nav__link--btn" href="/transfers"
              >Transfer Records</a
            >
          </li>
        </ul>
      </nav>
    </header>
    <div class="container">
      <table class="content-table">
        <thead>
          <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Current Balance</th>
          </tr>
        </thead>
        <tbody>
          <% for(let customer of customers){ %>
          <tr>
            <td><%= customer._id %></td>
            <td>
              <a href="/customer/<%= customer._id %>"><%= customer.name %></a>
            </td>
            <td><%= customer.email %></td>
            <td>â‚¹<%= customer.currentBalance %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
